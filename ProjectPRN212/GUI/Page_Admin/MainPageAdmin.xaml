<Window x:Class="ProjectPRN212.GUI.Page_Admin.MainPageAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212.GUI.Page_Admin"
        mc:Ignorable="d"
        Title="MainPageAdmin" Height="450" Width="800">
    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="https://png.pngtree.com/thumb_back/fh260/background/20220509/pngtree-abstract-pastel-colorful-gradient-background-concept-for-your-graphic-colorful-design-image_1344615.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Thanh tiêu đề -->
        <StackPanel Orientation="Horizontal" Background="#CCB3E5FC" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Admin Dashboard" Foreground="#FF01579B" FontSize="24" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <!-- Centered Buttons -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="Manage Products" Width="200" Height="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Click="Button_Click" Grid.Row="0" Grid.Column="0" Margin="10"/>
            <Button Content="Manage Users" Width="200" Height="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Grid.Row="0" Grid.Column="1" Margin="10" Click="Button_Click_1"/>
            <Button Content="Profile" Width="200" Height="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Click="btnProfile_Click" Grid.Row="1" Grid.Column="0" Margin="10"/>
            <Button Content="Logout" Width="200" Height="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Click="btnLogout_Click" Grid.Row="1" Grid.Column="1" Margin="10"/>
        </Grid>
    </Grid>
</Window>
