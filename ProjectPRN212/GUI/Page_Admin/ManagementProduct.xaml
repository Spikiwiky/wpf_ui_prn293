<Window x:Class="ProjectPRN212.GUI.Page_Admin.ManagementProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212.GUI.Page_Admin"
        mc:Ignorable="d"
        Title="ManagementProduct" Height="656" Width="1483">
    <Grid>
        <StackPanel Orientation="Horizontal" Background="#FFB3E5FC" Height="50" VerticalAlignment="Top">
            <TextBlock Text="Management Product " Foreground="#FF01579B" FontSize="24" VerticalAlignment="Center" Margin="10,0"/>
        </StackPanel>

        <DockPanel Background="#FFFFF9C4" Height="40" VerticalAlignment="Top" Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Manage Products" Width="120" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent"/>
                <Button Content="Manage Users" Width="120" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Click="Button_Click"/>
                <Button Name="btn_createNewProduct" Content="Create new product" Width="120" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" Click="btn_createNewProduct_Click"/>

            </StackPanel>

            <Button Name="btnLogout" Content="Logout" Width="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" DockPanel.Dock="Right" Click="btnLogout_Click"  />
            <Button  x:Name="btnProfile"  Content="Profile" Width="100" Background="#FFFFCC80" Foreground="#FF01579B" BorderBrush="Transparent" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="btnProfile_Click"  />

        </DockPanel>

        <DataGrid x:Name="dgProducts" Margin="10,95,10,4"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  ItemsSource="{Binding Products}"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProductName}" Width="150" FontWeight="Bold"/>
                <DataGridTextColumn Header="Image " Binding="{Binding Thumbnail}" Width="200"/>
                <DataGridTextColumn Header="Price" Binding="{Binding SalePrice}" Width="100"/>
                <DataGridTextColumn Header="Summary" Binding="{Binding Summary}" Width="200"/>
                <DataGridTextColumn Header="ProductDetail" Binding="{Binding ProductDetail}" Width="200"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ProductStatus}" Width="100"/>
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Hide" Click="HideProduct_Click" Margin="5">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ProductStatus}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Content="Show" Click="ShowProduct_Click" Margin="5">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ProductStatus}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>

                                <Button Background="Blue" Content="Update" Click="UpdateButton_Click" Margin="5"/>

                                <Button Background="Red" Content="Delete" Click="DeleteButton_Click" Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
