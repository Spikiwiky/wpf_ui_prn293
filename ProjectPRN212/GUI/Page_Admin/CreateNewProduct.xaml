<Window x:Class="ProjectPRN212.GUI.Page_Admin.CreateNewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212.GUI.Page_Admin"
        mc:Ignorable="d"
        Title="Create New Product" Height="684" Width="902">
    <Grid Background="#FFFFF9C4">
        <StackPanel Margin="20">
            <TextBlock Text="Create New Product" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Product Name:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductName" Width="300"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Price:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Width="150"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Quantity:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtQuantity" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Category:" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbCategory" Width="300"/>
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Thumbnail:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtThumbnail" Width="300"/>
            </StackPanel>



            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Summary:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtSummary" Width="300" Height="100" AcceptsReturn="True"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Product Detail:" Width="120" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProductDetail" Width="300" Height="150" AcceptsReturn="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.495,4.599">
                <Button Content="Create" Width="100" Margin="10,0,0,0" Click="CreateButton_Click"/>
                <Button Content="Cancel" Width="99" Margin="10,0,0,0" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
