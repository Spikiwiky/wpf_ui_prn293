<Window x:Class="ProjectPRN212.Login_Register.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectPRN212.Login_Register"
        mc:Ignorable="d"
        Title="Register" Height="648" Width="591">
    <Grid Background="#FFE8F5E9" Margin="0,0,0,-6">
        <TextBlock Text="Register New Account" FontSize="18" FontWeight="Bold" Foreground="#FF01579B" HorizontalAlignment="Center" Margin="0,20,0,10"/>

        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Background="White" Padding="15" CornerRadius="5">
            <StackPanel>
                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="Full Name" Foreground="#FFA0A0A0" Margin="0,0,5,0" FontSize="12"/>
                    <TextBox Name="txtFullName" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="150"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                    <TextBlock Text="Gender" Foreground="#FFA0A0A0" Margin="0,0,5,0" FontSize="12"/>
                    <ComboBox Name="Gender" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" FontSize="12" Width="150">
                        <ComboBoxItem Content="Male" Tag="Male"/>
                        <ComboBoxItem Content="Female" Tag="Female"/>

                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Phone Number" Foreground="#FFA0A0A0" Margin="0,10,0,3" FontSize="12"/>
                    <TextBox Name="txtPhoneNumber" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Email" Foreground="#FFA0A0A0" Margin="0,10,0,3" FontSize="12"/>
                    <TextBox Name="txtEmail" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Password" Foreground="#FFA0A0A0" Margin="0,10,0,3" FontSize="12"/>
                    <PasswordBox Name="txtPassword" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="200"/>
                </StackPanel>
                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Re-Password" Foreground="#FFA0A0A0" Margin="0,10,0,3" FontSize="12"/>
                    <PasswordBox Name="txtRePassword" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,5,0,0">
                    <TextBlock Text="Address" Foreground="#FFA0A0A0" Margin="0,10,0,3" FontSize="12"/>
                    <TextBox Name="txtAddress" Margin="0,0,0,3" Padding="5" BorderBrush="#FF01579B" BorderThickness="1" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Register" Background="#FF01579B" Foreground="White" Margin="0,0,5,0" Padding="8" BorderBrush="Transparent" FontSize="12" Click="Button_Click_1"/>
                    <Button Name="btnBack" Content="Back" Background="#FFB3E5FC" Foreground="#FF01579B" Padding="8" BorderBrush="Transparent" Click="btnBack_Click" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
